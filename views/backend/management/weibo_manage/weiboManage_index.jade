extends ../../commons/layout

block head
    // Datatables
    link(href='stylesheets/dataTables/dataTables.bootstrap.min.css', rel='stylesheet')
    //link(href='stylesheets/dataTables/buttons.bootstrap.min.css', rel='stylesheet')
    //link(href='stylesheets/dataTables/fixedHeader.bootstrap.min.css', rel='stylesheet')
