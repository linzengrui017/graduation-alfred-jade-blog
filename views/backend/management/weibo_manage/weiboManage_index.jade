block content

    .row
        .col-md-12.col-sm-12.col-xs-12
            .x_panel
                .x_title
                    h2
                        | 微博列表
                    .clearfix
                .x_content
                    #datatable_wrapper.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
                        //模态框
                        .modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog', aria-hidden='true', style='display: none;')
                            .modal-dialog.modal-lg
                                .modal-content
                                    .modal-header
                                        button.close(type='button', data-dismiss='modal')
                                            span(aria-hidden='true') ×
                                        h4#myModalLabel.modal-title Modal title
                                    .modal-body
                                        h4 Text in a modal
                                        p
                                            | 1111
                                    .modal-footer
                                        button.btn.btn-default(type='button', data-dismiss='modal') Close
                                        button.btn.btn-primary(type='button') Save changes

                        .modal.fade.bs-example-modal-sm(tabindex='-1', role='dialog', aria-hidden='true')
                            .modal-dialog.modal-sm
                                .modal-content
                                    .modal-header
                                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                                            span(aria-hidden='true') ×
                                        h4#myModalLabel2.modal-title Modal title
                                    .modal-body
                                        h4 Text in a modal
                                        p
                                            | 222222
                                    .modal-footer
                                        button.btn.btn-default(type='button', data-dismiss='modal') Close
                                        button.btn.btn-primary(type='button') Save changes

                        .modal.fade.bs-example-modal(tabindex='-1', role='dialog', aria-hidden='true', style='display: none;')
                            .modal-dialog.modal-lg
                                .modal-content
                                    .modal-header
                                        button.close(type='button', data-dismiss='modal')
                                            span(aria-hidden='true') ×
                                        h4#myModalLabel3.modal-title Modal title
                                    .modal-body
                                        h4 Text in a modal
                                        p
                                            | 第3个模态框
                                    .modal-footer
                                        button.btn.btn-default(type='button', data-dismiss='modal') Close
                                        button.btn.btn-primary(type='button') Save changes




                        .row
                            .col-sm-12
                                table#datatable.table.table-striped.table-bordered.dataTable.no-footer(role='grid', aria-describedby='datatable_info')
                                    thead
                                        tr(role='row')
                                            th.sorting(tabindex='0', aria-controls='datatable', rowspan='1', colspan='1', style='') 唯一标识
                                            th.sorting(tabindex='0', aria-controls='datatable', rowspan='1', colspan='1', style='') 作者
                                            th.sorting_desc(tabindex='0', aria-controls='datatable', rowspan='1', colspan='1', aria-sort='descending', style='') 标题
                                            th.sorting(tabindex='0', aria-controls='datatable', rowspan='1', colspan='1', style='') 内容
                                            th.sorting(tabindex='0', aria-controls='datatable', rowspan='1', colspan='1', style='') 评论内容
                                            th.sorting(tabindex='0', aria-controls='datatable', rowspan='1', colspan='1',style='') 转发的微博
                                            th(tabindex='0', aria-controls='datatable', rowspan='1', colspan='1',style='') 操作
