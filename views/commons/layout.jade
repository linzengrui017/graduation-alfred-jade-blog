doctype html
html
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        // Meta, title, CSS, favicons, etc.
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        link(rel="shortcut icon", href="/favicon.ico")

        title= title

        include top

        //customer style
        link(href='stylesheets/user/layout.css', rel='stylesheet')

        block head

    body

        nav#nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse
            ul.nav.navbar-nav
                li
                    a(href='/toBlogListPage' )
                        i.fa.fa-weibo(style='color:#ffffff;')
                            |  微博
                -if(user)
                    li
                        a(href='/toAddPage')
                            span(style='color:#ffffff;')
                                | 列表
            ul.nav.navbar-nav.navbar-right
                -if(user)
                    li.dropdown
                        a.user-profile.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                            img#layout_img(src='', alt='')
                            span(style='color:#ffffff;')=user.username
                            span.caret
                        ul.dropdown-menu
                            li
                                a(href='/profile')
                                        | 个人中心
                            li.divider(role='separator')
                            li
                                a(href='/toFriendPage')
                                        | 我的好友
                            li.divider(role='separator')
                            li
                                a(href='/logout')
                                        | 退出
                -else
                    li
                        a(href='/toLogin_form')
                            span(style='color:#ffffff;')
                                | 登录
                    li
                        a(href='/toRegister_form')
                            span(style='color:#ffffff;')
                                | 注册




        div
            .col-md-2

            .col-md-8
                block content
            .col-md-2


        include bottom

