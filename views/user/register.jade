extends ../commons/layout

block content

    .x_panel
        .x_title
            h2
                | 用户注册
            .clearfix
        .x_content
            br
            form#demo-form2.form-horizontal.form-label-left(data-parsley-validate='', novalidate='')
                .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for='username')
                        | 用户名
                        span.required *
                    .col-md-6.col-sm-6.col-xs-12
                        input#username.form-control.col-md-7.col-xs-12(type='text', name='username',required)
                .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for='password')
                        | 密码
                        span.required *
                    .col-md-6.col-sm-6.col-xs-12
                        input#password.form-control.col-md-7.col-xs-12(type='password', name='password', required)
                .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for='password2')
                        | 确认密码
                        span.required *
                    .col-md-6.col-sm-6.col-xs-12
                        input#password2.form-control.col-md-7.col-xs-12(type='password', name='password2', required)
                //.ln_solid
                .form-group
                    .col-md-6.col-sm-6.col-xs-12.col-md-offset-3
                        //button.btn.btn-primary(type='button') Cancel
                        button.btn.btn-primary(type='reset') 重置
                        button.btn.btn-success(type='submit') 提交






